{
  "parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true,
			"experimentalObjectRestSpread": true,
			"impliedStrict": true
		}
	},
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
  },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "off",
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
        ]
    }
}